<p id="notice"><%= notice %></p>

<h1>Events</h1>

<%= form_tag import_events_path, multipart: true, class: 'form-inline' do %>
  <div class="form-group">
    <%= file_field_tag :file, class: '' %>
  </div>

  <div class="form-group">
    <%= submit_tag "Import ICS", class: 'btn btn-info' %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Room</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Recurring</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <% room = event.room_id? ? Room.find(event.room_id) : nil %>
        <% if !room.nil? then %>
          <td><%= link_to room.name, room_path(room) %></td>
        <% else %>
          <td><%= "No Room" %></td>
        <% end %>
        <td><%= event.d_start %></td>
        <td><%= event.d_end %></td>
        <td><%= event.rule %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
