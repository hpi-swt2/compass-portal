<p id="notice"><%= notice %></p>

<h1 class="fw-light">Rooms</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Floor</th>
        <th>Occupancy</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% Room.room_type_to_external_mapping.each do |internal,external| %>
      <tr>
        <th colspan="7"><b><%= external.pluralize() %>:</b></th>
      </tr>
      <% @rooms.each do |room| %>
        <% if room.room_type == internal %>
          <tr>
            <td><%= room.name %></td>
            <td><%= room.floor %></td>
            <td>
              <% if room.free? %>
                <p class="occupancy free">free</p>
              <% else %>
                <p class="occupancy occupied">occupied</p>
              <% end %>
            </td>
            <td class="td-btn"><%= link_to 'Calendar', room_calendar_path(room, start_date: Time.zone.today.beginning_of_week.to_s), class: "btn btn-secondary link-btn" %></td>
            <td class="td-btn"><%= link_to 'Show', room, class: "btn btn-secondary link-btn" %></td>
            <td class="td-btn"><% if can? :update, room %><%= link_to 'Edit', edit_room_path(room), class: "btn btn-secondary link-btn"  %><%end%></td>
            <td class="td-btn"><% if can? :destroy, room %><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary link-btn" %><%end%></td>
            <td class="td-btn"><% if current_user %><% if current_user.favourites.include? room %><%= link_to 'Make it unfavourite', favourite_room_path(room, type: "unfavourite", url: "rooms"), method: :put, class: "btn btn-secondary link-btn" %><% else %><%= link_to 'Make it favourite', favourite_room_path(room, type: "favourite", url: "rooms"), method: :put, class: "btn btn-secondary link-btn" %><% end %><% end %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>


<% if can? :create, Room %>
  <%= link_to 'New Room', new_room_path, class: "btn btn-primary link-btn" %>
<% end %>
<% if current_user %>
  <%= link_to 'Show Favourite Rooms', favouriteroomlist_path, class: "btn btn-primary link-btn" %>
<% end %>
