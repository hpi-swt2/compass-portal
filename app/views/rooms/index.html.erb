<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table class="roomsList">
  <thead>
    <tr>
      <th id=roomName>Name</th>
      <th id=normalRow>Floor</th>
      <th id=normalRow>Room type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><b>Seminarräume:</b></td>
    <% @rooms.each do |room| %>
      <% if room.room_type == "Seminarraum" %>
      <tr>
        <td id=roomName><%= room.name %></td>
        <td id=normalRow><%= room.floor %></td>
        <td id=normalRow><%= room.room_type %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
    </tr>

