<h1><%= @month %> <%= @year %></h1>
<%= week_calendar(number_of_weeks: 1, events: @events) do |date, events| %>
  <%= date.day %>
  <% events.each do |event| %>
      <div class="content <%= event.id.to_s == @highlighted_event_id ? "highlited_event" : "" %>">
        <%= event.start_hour_minute %>
        <%= event.name %>
      </div>
  <% end %> 
<% end %>
<div class="td-btn"><%= link_to 'Create new Event', :new_event, class: "btn btn-secondary link-btn" %></div>