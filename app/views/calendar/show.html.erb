<h1><%= @month %> <%= @year %></h1>
<%= week_calendar(number_of_weeks: 1, events: @events) do |date, events| %>
  <%= date.day %>
  <% events.each do |event| %>
      <div class="content <%= event.id.to_s == @highlighted_event_id ? "highlighted_event" : "" %>">
        <%= event.start_hour_minute %>
        <%= event.name %>
      </div>
  <% end %> 
<% end %>
